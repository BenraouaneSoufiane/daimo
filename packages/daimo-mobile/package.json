{
  "name": "daimo-mobile",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "lint": "eslint . && tsc . --no-emit",
    "test": "jest"
  },
  "dependencies": {
    "@types/jest": "^29.5.1",
    "@types/react": "^18.0.36",
    "eslint": "^8.38.0",
    "eslint-config-universe": "^11.2.0",
    "expo": "~48.0.11",
    "expo-splash-screen": "~0.18.1",
    "expo-status-bar": "~1.4.4",
    "jest": "^29.5.0",
    "jest-expo": "^48.0.2",
    "react": "18.2.0",
    "react-native": "0.71.6",
    "react-native-mmkv": "^2.8.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0"
  },
  "private": true,
  "eslintConfig": {
    "extends": "universe/native",
    "rules": {
      "import/no-restricted-paths": [
        "error",
        {
          "zones": [
            {
              "target": "test/",
              "from": "src/",
              "message": "Don't import test files."
            }
          ]
        }
      ]
    }
  }
}
