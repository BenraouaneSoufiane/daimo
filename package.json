{
  "private": true,
  "name": "@daimo/monorepo",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "turbo dev",
    "start": "turbo start",
    "build": "turbo build",
    "build:exclude-bot": "turbo build --filter=!@daimo/bot",
    "build:exclude-web": "turbo build --filter=!@daimo/web",
    "build:api": "turbo run build --filter @daimo/api",
    "build:bot": "turbo run build --filter @daimo/bot",
    "build:mobile": "turbo run build --filter @daimo/mobile",
    "build:clippy": "turbo run build --filter @daimo/clippy",
    "test": "turbo test",
    "lint": "turbo lint && syncpack list-mismatches",
    "codegen": "turbo codegen",
    "fix:deps": "syncpack fix-mismatches",
    "docker:api": "docker build -t daimo-api -f packages/daimo-api/Dockerfile .",
    "docker:shovel": "docker build -t daimo-shovel ./packages/daimo-contract/src/shovel"
  },
  "dependencies": {
    "eslint-config-universe": "^13.0.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.3.0",
    "syncpack": "^12.3.2",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "overrides": {
    "react-native": "0.73.4",
    "@types/react-native": "0.73.0"
  },
  "engines": {
    "node": ">=20.3.0",
    "npm": ">=9.6.7"
  }
}
